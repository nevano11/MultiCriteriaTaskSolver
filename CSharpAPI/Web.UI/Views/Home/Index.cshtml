@{
    ViewData["Title"] = "Принятие решений";
}

<div>
    <h1 class="display-6">Многокритериальное принятие решений</h1>
    <div>
        @* Мат модель *@
        <p class="text-sm-start fs-3">Математическая модель</p>
        <p class="text-sm-start">Содержит критерии и альтернативы решаемой задачи. <a href="/Home/Privacy#item-1">Подробнее</a></p>
        <div class="math-model d-flex">
            <div class="col-9 m-1">
                <p class="text-sm-start fs-5 mb-1">Альтернативы</p>
                <table class="table alternative-table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <td scope="col">
                            <button type="button" class="btn btn-primary btn-sm bi bi-plus-lg float-end" data-toggle="tooltip" data-placement="top" title="Добавить альтернативу"/>
                        </td>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="col-3 m-1">
                <div class="horizontal-div">
                    <p class="text-sm-start fs-5 mb-0">Критерии</p>
                </div>
                <ul class="criteria-list list-group mt-2">
                    @* CREATE *@
                    <li class="list-group-item create-criteria-li">
                        <div class="d-flex justify-content-between">
                            <div class="input-group">
                                <input type="text" class="form-control" aria-label="Название критерия">
                                <select class="form-select">
                                    <option selected value="1">max</option>
                                    <option value="0">min</option>
                                </select>
                            </div>
                            <button type="button" class="btn btn-primary btn-sm bi bi-plus-lg" data-toggle="tooltip" data-placement="top" title="Добавить критерий"></button>
                        </div>
                        <div class="invalid-feedback">
                            Пожалуйста, заполните это поле
                        </div>
                    </li>
                    @* Items *@
                </ul>
            </div>
        </div>
        @* Информация о важности критериев *@
        <p class="text-sm-start fs-3">Информация о важности критериев</p>
        <p class="text-sm-start">Определяет важность критериев. <a href="/Home/Privacy#item-2">Подробнее</a></p>
        <div class="criteria-relation d-flex flex-column col-6">
            <select class="form-select mb-3">
                <option value="-100" selected>Choose...</option>
            </select>
            <p class="info-message"></p>
            <div class="criteria-relation-form"></div>
        </div>
        @* Метод принятия решений *@
        <p class="text-sm-start fs-3">Метод принятия решений</p>
        <div class="methods col-6">
            <p>Тип метода принятия решений</p>
            <select class="form-select select-step-method mb-3">
                <option value="-100" selected>Choose...</option>
                <option value="1">Одношаговый метод</option>
                <option value="2">Многошаговый метод</option>
            </select>
            <div class="method-select-div"></div>
        </div>
        @* Поиск решения *@
        <p class="text-sm-start fs-3 mb-1">Поиск решения</p>
        <button type="button" class="btn btn-primary bi bi-search get-result"> Выполнить поиск</button>
        <button type="button" class="btn btn-warning bi bi-arrow-bar-up export" data-bs-toggle="modal" data-bs-target="#exportModal"> Экспорт</button>
        <button type="button" class="btn btn-warning bi bi-arrow-bar-down import"> Импорт</button>
    </div>
    <div class="modal fade" id="exportModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
